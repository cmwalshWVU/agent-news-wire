# Agent News Wire Frontend - Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# API Configuration
# =============================================================================
# REST API URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# WebSocket URL (for real-time alerts)
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# =============================================================================
# Solana Configuration
# =============================================================================
# RPC endpoint
NEXT_PUBLIC_SOLANA_RPC=https://api.devnet.solana.com

# Network (devnet | mainnet-beta)
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# =============================================================================
# Production URLs (example)
# =============================================================================
# NEXT_PUBLIC_API_URL=https://api.agentnewswire.io
# NEXT_PUBLIC_WS_URL=wss://api.agentnewswire.io
# NEXT_PUBLIC_SOLANA_RPC=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
# NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
